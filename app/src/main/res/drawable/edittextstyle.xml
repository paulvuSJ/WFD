<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <stroke
                android:width="1dp"
                android:color="#d7c11d"></stroke>

            <corners
                android:radius="0dp"
                android:bottomLeftRadius="1mm"
                android:bottomRightRadius="1mm"
                android:topRightRadius="1mm"
                android:topLeftRadius="1mm"></corners>

        </shape>

    </item>
</selector>