<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />
                    <stroke android:width="1dp" android:color="#B4925A" />
                    <gradient android:gradientRadius="2mm"></gradient>
                    <corners
                        android:bottomLeftRadius="2mm"
                        android:bottomRightRadius="2mm"
                        android:radius="0dp"
                        android:topLeftRadius="2mm"
                        android:topRightRadius="2mm"></corners>

                </shape>

            </item>
            <item>
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/arrowdown" />

            </item>
        </layer-list>
    </item>
</selector>